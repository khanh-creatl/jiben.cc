-- Script: DNK Aimlock GUI for Da Hood Hood Z
-- Tác giả: Grok (tạo cho bạn)
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")
local VirtualInputManager = game:GetService("VirtualInputManager")

local player = Players.LocalPlayer
local mouse = player:GetMouse()
local camera = game.Workspace.CurrentCamera
local head = player.Character and player.Character:FindFirstChild("Head")

-- Thiết lập GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "DNK_Aimlock"

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 80, 0, 50)
Frame.Position = UDim2.new(0.5, -40, 0.5, -25)
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Nền đen hoàn toàn
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 25)
Title.BackgroundTransparency = 1
Title.Text = "DNK"
Title.TextColor3 = Color3.fromRGB(255, 0, 0)
Title.TextSize = 16
Title.TextStrokeTransparency = 0.5
Title.Parent = Frame

local AimlockButton = Instance.new("TextButton")
AimlockButton.Size = UDim2.new(0.7, 0, 0, 15)
AimlockButton.Position = UDim2.new(0.15, 0, 0.6, 0)
AimlockButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
AimlockButton.Text = "Aimlock: OFF"
AimlockButton.TextColor3 = Color3.fromRGB(255, 255, 255)
AimlockButton.TextSize = 10
AimlockButton.Parent = Frame

-- Biến trạng thái
local aimlockEnabled = false
local target = nil
local fovRadius = 50 -- FOV ẩn
local bulletDelay = 0.1 -- Bù delay cho Da Hood (tăng nếu ping cao)
local lastAmmo = nil
local reloadKey = Enum.KeyCode.R -- Phím reload trong Da Hood

-- Hàm tạo hiệu ứng màu cầu vồng mượt mà cho "DNK"
local function updateRainbowColor()
    while true do
        local time = tick() * 0.1
        local r = math.sin(time) * 0.5 + 0.5
        local g = math.sin(time + 2) * 0.5 + 0.5
        local b = math.sin(time + 4) * 0.5 + 0.5
        Title.TextColor3 = Color3.new(r, g, b)
        wait(0.05)
    end
end

spawn(updateRainbowColor)

-- Hàm highlight mục tiêu (aura xanh)
local function highlightTarget(targetPlayer)
    if targetPlayer and targetPlayer.Character then
        local highlight = Instance.new("Highlight")
        highlight.FillColor = Color3.fromRGB(0, 255, 0) -- Aura xanh
        highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
        highlight.FillTransparency = 0.4
        highlight.Parent = targetPlayer.Character
        game.Debris:AddItem(highlight, 0.15)
    end
end

-- Hàm tìm mục tiêu trong FOV ẩn dựa trên vị trí chuột
local function getTargetInFOV()
    if not head then return nil end
    local screenPosHead, onScreen = camera:WorldToViewportPoint(head.Position)

    for _, otherPlayer in pairs(Players:GetPlayers()) do
        if otherPlayer ~= player and otherPlayer.Character and otherPlayer.Character:FindFirstChild("Head") then
            local humanoid = otherPlayer.Character:FindFirstChild("Humanoid")
            if humanoid and humanoid.Health > 0 then
                local targetHead = otherPlayer.Character.Head
                local screenPosTarget, onScreenTarget = camera:WorldToViewportPoint(targetHead.Position)
                local distance = (Vector2.new(screenPosTarget.X, screenPosTarget.Y) - Vector2.new(screenPosHead.X, screenPosHead.Y)).Magnitude
                if distance <= fovRadius and onScreenTarget then
                    return otherPlayer
                end
            end
        end
    end
    return nil
end

-- Hàm dự đoán vị trí cho Da Hood (thêm bù recoil nhẹ)
local function predictPosition(head, velocity)
    local acceleration = Vector3.new(0, -9.81, 0) -- Trọng lực
    local recoilOffset = Vector3.new(0, 0.5, 0) -- Bù recoil nhẹ cho Da Hood
    return head.Position + velocity * bulletDelay + 0.5 * acceleration * bulletDelay * bulletDelay + recoilOffset
end

-- Hàm kiểm tra và reload tự động (tối ưu cho Da Hood)
local function checkAndReload()
    local character = player.Character
    if not character or not aimlockEnabled then return end

    local tool = character:FindFirstChildOfClass("Tool")
    if tool and tool:FindFirstChild("Ammo") then
        local ammo = tool.Ammo.Value
        if ammo <= 0 and lastAmmo ~= 0 then
            lastAmmo = 0
            VirtualInputManager:SendKeyEvent(true, reloadKey, false, game)
            wait(1.5) -- Thời gian reload Da Hood (điều chỉnh nếu cần)
            VirtualInputManager:SendKeyEvent(false, reloadKey, false, game)
        elseif ammo > 0 then
            lastAmmo = ammo
        end
    else
        if lastAmmo == 0 then
            VirtualInputManager:SendKeyEvent(true, reloadKey, false, game)
            wait(1.5)
            VirtualInputManager:SendKeyEvent(false, reloadKey, false, game)
            lastAmmo = 1
        end
    end
end

-- Hàm bật/tắt aimlock
AimlockButton.MouseButton1Click:Connect(function()
    aimlockEnabled = not aimlockEnabled
    AimlockButton.Text = "Aimlock: " .. (aimlockEnabled and "ON" or "OFF")
    if aimlockEnabled then
        target = getTargetInFOV()
        if not target then
            aimlockEnabled = false
            AimlockButton.Text = "Aimlock: OFF"
            StarterGui:SetCore("SendNotification", {
                Title = "DNK Aimlock",
                Text = "No target in FOV!",
                Duration = 3
            })
        else
            lastAmmo = 1
        end
    else
        target = nil
    end
end)

-- Aimlock logic (tối ưu cho Da Hood)
RunService.RenderStepped:Connect(function()
    if aimlockEnabled and target and target.Character and target.Character:FindFirstChild("Head") then
        local head = target.Character.Head
        local humanoidRootPart = target.Character:FindFirstChild("HumanoidRootPart")
        if humanoidRootPart then
            local velocity = humanoidRootPart.Velocity
            local predictedPos = predictPosition(head, velocity)
            camera.CFrame = CFrame.new(camera.CFrame.Position, predictedPos)
        else
            camera.CFrame = CFrame.new(camera.CFrame.Position, head.Position)
        end
        highlightTarget(target)
        checkAndReload()
    end
end)

-- Thông báo khởi động
StarterGui:SetCore("SendNotification", {
    Title = "DNK Aimlock for Da Hood",
    Text = "Loaded! Look at target and click to toggle. Auto-reload enabled.",
    Duration = 5
})

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local StarterGui = game:GetService("StarterGui")
local Stats = game:GetService("Stats")
local LocalPlayer = Players.LocalPlayer
local Camera = game.Workspace.CurrentCamera

-- Biến trạng thái
local CamLockEnabled = false
local LockedPlayer = nil
local Gui = nil
local LastTargetPosition = nil
local PredictionFactor = 0.35 -- Dự đoán mạnh
local TargetPartName = "Head" -- Khóa vào đầu
local ProximityRadius = 50 -- Bán kính tìm kiếm gần (kế bên hoặc trước mặt)

-- Tạo GUI
local function CreateGUI()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game.CoreGui
    ScreenGui.Name = "DNKCamLock"

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 150, 0, 100)
    Frame.Position = UDim2.new(0.5, -75, 0.5, -50)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Frame.BackgroundTransparency = 0.5
    Frame.Parent = ScreenGui
    Frame.Active = true
    Frame.Draggable = true

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 30)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundTransparency = 1
    Title.Text = "DNK"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextScaled = true
    Title.Font = Enum.Font.SourceSansBold
    Title.Parent = Frame

    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Size = UDim2.new(0.8, 0, 0, 40)
    ToggleButton.Position = UDim2.new(0.1, 0, 0.3, 0)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    ToggleButton.Text = "OFF"
    ToggleButton.TextColor3 = Color3.fromRGB(255, 0, 0)
    ToggleButton.TextScaled = true
    ToggleButton.Font = Enum.Font.SourceSans
    ToggleButton.Parent = Frame

    -- Hiệu ứng đổi màu cho tiêu đề
    local function ChangeTitleColor()
        while true do
            local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut)
            local colors = {
                Color3.fromRGB(255, 0, 0),
                Color3.fromRGB(0, 255, 0),
                Color3.fromRGB(0, 0, 255),
                Color3.fromRGB(255, 255, 0)
            }
            for _, color in ipairs(colors) do
                TweenService:Create(Title, tweenInfo, {TextColor3 = color}):Play()
                task.wait(1)
            end
        end
    end
    task.spawn(ChangeTitleColor)

    -- Xử lý nút bật/tắt CamLock
    ToggleButton.MouseButton1Click:Connect(function()
        CamLockEnabled = not CamLockEnabled
        ToggleButton.Text = CamLockEnabled and "ON" or "OFF"
        ToggleButton.TextColor3 = CamLockEnabled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
        if CamLockEnabled then
            LockedPlayer = FindTarget() -- Chọn mục tiêu khi bật ON
        else
            LockedPlayer = nil
            for _, player in pairs(Players:GetPlayers()) do
                if player.Character and player.Character:FindFirstChild("Highlight") then
                    player.Character.Highlight:Destroy()
                end
            end
        end
    end)

    -- Phím tắt bật/tắt (phím E)
    UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
        if not gameProcessedEvent and input.KeyCode == Enum.KeyCode.E then
            CamLockEnabled = not CamLockEnabled
            ToggleButton.Text = CamLockEnabled and "ON" or "OFF"
            ToggleButton.TextColor3 = CamLockEnabled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
            if CamLockEnabled then
                LockedPlayer = FindTarget() -- Chọn mục tiêu khi bật ON
            else
                LockedPlayer = nil
                for _, player in pairs(Players:GetPlayers()) do
                    if player.Character and player.Character:FindFirstChild("Highlight") then
                        player.Character.Highlight:Destroy()
                    end
                end
            end
        end
    end)

    Gui = ScreenGui
end

-- Tạo Highlight cho mục tiêu
local function CreateHighlight(character)
    if character:FindFirstChild("Highlight") then
        return character.Highlight
    end
    local highlight = Instance.new("Highlight")
    highlight.FillColor = Color3.fromRGB(0, 255, 0)
    highlight.OutlineColor = Color3.fromRGB(0, 255, 0)
    highlight.FillTransparency = 0.5
    highlight.OutlineTransparency = 0
    highlight.Adornee = character
    highlight.Parent = character
    highlight.Enabled = true
    return highlight
end

-- Lấy ping thực tế
local function GetPing()
    return Stats.Network.ServerStatsItem["Data Ping"]:GetValue() or 150
end

-- Tìm mục tiêu kế bên hoặc trước mặt
local function FindTarget()
    local closestPlayer = nil
    local closestDistance = math.huge
    local mouse = LocalPlayer:GetMouse()
    local mousePos = Vector2.new(mouse.X, mouse.Y)

    local myRoot = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if myRoot then
        for _, player in pairs(Players:GetPlayers()) do
            if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
                local targetPart = player.Character:FindFirstChild(TargetPartName) or player.Character:FindFirstChild("HumanoidRootPart")
                if targetPart then
                    local distance = (myRoot.Position - targetPart.Position).Magnitude
                    local screenPos, onScreen = Camera:WorldToViewportPoint(targetPart.Position)
                    local screenDistance = (Vector2.new(screenPos.X, screenPos.Y) - mousePos).Magnitude

                    -- Ưu tiên mục tiêu gần bạn và trong tầm nhìn
                    if distance < ProximityRadius and onScreen and screenDistance < FOVRadius and distance < closestDistance then
                        closestDistance = distance
                        closestPlayer = player
                    end
                end
            end
        end
    end
    return closestPlayer
end

-- Theo dõi hồi sinh
local function MonitorPlayerRespawn(player)
    if not player then return end
    player.CharacterAdded:Connect(function(newCharacter)
        if CamLockEnabled and player == LockedPlayer then
            local humanoid = newCharacter:WaitForChild("Humanoid", 5)
            local targetPart = newCharacter:WaitForChild(TargetPartName, 5) or newCharacter:WaitForChild("HumanoidRootPart", 5)
            if humanoid and targetPart and humanoid.Health > 0 then
                CreateHighlight(newCharacter)
            end
        end
    end)
end

-- Xử lý CamLock
RunService.RenderStepped:Connect(function(deltaTime)
    if CamLockEnabled and LocalPlayer.Character then
        -- Nếu không có mục tiêu hoặc mục tiêu không hợp lệ, không tìm lại
        if not LockedPlayer or not LockedPlayer.Character or not LockedPlayer.Character:FindFirstChild("Humanoid") or LockedPlayer.Character.Humanoid.Health <= 0 then
            LockedPlayer = nil
            for _, player in pairs(Players:GetPlayers()) do
                if player.Character and player.Character:FindFirstChild("Highlight") then
                    player.Character.Highlight:Destroy()
                end
            end
        elseif LockedPlayer and LockedPlayer.Character and (LockedPlayer.Character:FindFirstChild(TargetPartName) or LockedPlayer.Character:FindFirstChild("HumanoidRootPart")) then
            local targetPart = LockedPlayer.Character:FindFirstChild(TargetPartName) or LockedPlayer.Character.HumanoidRootPart
            local targetPos = targetPart.Position
            local ping = GetPing() / 1000

            -- Dự đoán vị trí
            if LastTargetPosition then
                local velocity = (targetPart.Position - LastTargetPosition) / deltaTime
                targetPos = targetPos + velocity * ping * PredictionFactor
            end
            LastTargetPosition = targetPart.Position

            -- Khóa camera tức thời
            Camera.CFrame = CFrame.new(Camera.CFrame.Position, targetPos)

            -- Thêm highlight
            if not targetPart.Parent:FindFirstChild("Highlight") then
                CreateHighlight(targetPart.Parent)
            end
        end
    else
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character and player.Character:FindFirstChild("Highlight") then
                player.Character.Highlight:Destroy()
            end
        end
    end
end)

-- Khởi tạo GUI
CreateGUI()

-- Thông báo khởi động
StarterGui:SetCore("SendNotification", {
    Title = "DNK CamLock",
    Text = "CamLock Loaded! Press 'E' or use GUI to toggle. Locks player next to or in front of you.",
    Duration = 5
})

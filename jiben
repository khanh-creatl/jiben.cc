-- Script Lua Roblox: GUI với Camera Theo Dõi Siêu Nhanh và Hiệu Ứng Cầu Vồng

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local StarterGui = game:GetService("StarterGui")
local LocalPlayer = Players.LocalPlayer
local Camera = game.Workspace.CurrentCamera

-- Biến trạng thái
local CamLockEnabled = false
local LockedPlayer = nil
local Highlight = nil
local Ping = 150 -- Giả định ping, có thể điều chỉnh
local SmoothingFactor = 0.1 -- Độ mượt của camera (nhỏ hơn = nhanh hơn)
local TargetPartName = "Head" -- Khóa vào đầu

-- Tạo GUI
local function CreateGUI()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game.CoreGui
    ScreenGui.Name = "DNKCamLock"
    ScreenGui.ResetOnSpawn = false

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 150, 0, 100)
    Frame.Position = UDim2.new(0.5, -75, 0.5, -50)
    Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    Frame.BackgroundTransparency = 0.5
    Frame.Active = true
    Frame.Draggable = true
    Frame.Parent = ScreenGui

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 30)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundTransparency = 1
    Title.Text = "DNK"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextScaled = true
    Title.Font = Enum.Font.SourceSansBold
    Title.Parent = Frame

    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Size = UDim2.new(0.8, 0, 0, 40)
    ToggleButton.Position = UDim2.new(0.1, 0, 0.5, 0)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    ToggleButton.Text = "TẮT"
    ToggleButton.TextColor3 = Color3.fromRGB(255, 0, 0)
    ToggleButton.TextScaled = true
    ToggleButton.Font = Enum.Font.SourceSans
    ToggleButton.Parent = Frame

    -- Hiệu ứng cầu vồng cho tiêu đề và nút
    local function ChangeRainbowColor()
        while true do
            local t = tick() % 1 / 1 -- Tốc độ đổi màu siêu nhanh
            local r = math.sin(t * 2 * math.pi) * 127 + 128
            local g = math.sin(t * 2 * math.pi + 2 * math.pi / 3) * 127 + 128
            local b = math.sin(t * 2 * math.pi + 4 * math.pi / 3) * 127 + 128
            Title.TextColor3 = Color3.fromRGB(r, g, b)
            if Highlight then
                Highlight.FillColor = Color3.fromRGB(r, g, b)
                Highlight.OutlineColor = Color3.fromRGB(r, g, b)
            end
            wait()
        end
    end
    spawn(ChangeRainbowColor)

    -- Xử lý nút bật/tắt
    ToggleButton.MouseButton1Click:Connect(function()
        CamLockEnabled = not CamLockEnabled
        ToggleButton.Text = CamLockEnabled and "BẬT" or "TẮT"
        ToggleButton.TextColor3 = CamLockEnabled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
        if not CamLockEnabled then
            LockedPlayer = nil
            if Highlight then
                Highlight:Destroy()
                Highlight = nil
            end
            Camera.CameraType = Enum.CameraType.Custom
        else
            Camera.CameraType = Enum.CameraType.Scriptable
        end
    end)

    return ScreenGui
end

-- Tạo Highlight cho mục tiêu
local function CreateHighlight(character)
    if Highlight then
        Highlight:Destroy()
    end
    Highlight = Instance.new("Highlight")
    Highlight.FillColor = Color3.fromRGB(255, 255, 255)
    Highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    Highlight.FillTransparency = 0.5
    Highlight.OutlineTransparency = 0
    Highlight.Adornee = character
    Highlight.Parent = character
    Highlight.Enabled = true
end

-- Tìm mục tiêu gần nhất hoặc đang nhìn
local function FindTarget()
    local closestPlayer = nil
    local closestDistance = math.huge
    local closestAngle = math.huge
    local mouse = LocalPlayer:GetMouse()
    local camPos = Camera.CFrame.Position

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character.Humanoid.Health > 0 then
            local targetPart = player.Character:FindFirstChild(TargetPartName)
            if targetPart then
                local distance = (LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")) and 
                    (targetPart.Position - LocalPlayer.Character.HumanoidRootPart.Position).Magnitude or math.huge
                local vectorToPlayer = (targetPart.Position - camPos).Unit
                local cameraDirection = Camera.CFrame.LookVector
                local angle = math.acos(vectorToPlayer:Dot(cameraDirection))

                if angle < math.rad(30) and angle < closestAngle then -- Ưu tiên người trong góc nhìn 30 độ
                    closestAngle = angle
                    closestPlayer = player
                elseif closestPlayer == nil and distance < closestDistance then -- Nếu không có ai trong góc nhìn, chọn người gần nhất
                    closestDistance = distance
                    closestPlayer = player
                end
            end
        end
    end
    return closestPlayer
end

-- Theo dõi hồi sinh của mục tiêu
local function MonitorPlayerRespawn(player)
    if not player then return end
    player.CharacterAdded:Connect(function(newCharacter)
        if CamLockEnabled and player == LockedPlayer then
            local humanoid = newCharacter:WaitForChild("Humanoid", 5)
            local targetPart = newCharacter:WaitForChild(TargetPartName, 5)
            if humanoid and targetPart and humanoid.Health > 0 then
                CreateHighlight(newCharacter)
            end
        end
    end)
end

-- Tính toán vị trí dự đoán dựa trên ping
local function PredictTargetPosition(targetPart)
    local targetPos = targetPart.Position
    if Ping > 150 then
        local velocity = targetPart.Velocity
        local predictionFactor = Ping / 1000 * 1.2 -- Bù cho độ trễ
        targetPos = targetPos + velocity * predictionFactor
    end
    return targetPos
end

-- Cập nhật camera siêu nhanh
local lastCFrame = Camera.CFrame
RunService.RenderStepped:Connect(function(deltaTime)
    if CamLockEnabled and LocalPlayer.Character then
        -- Tìm mục tiêu nếu không có hoặc không hợp lệ
        if not LockedPlayer or not LockedPlayer.Character or not LockedPlayer.Character:FindFirstChild("Humanoid") or LockedPlayer.Character.Humanoid.Health <= 0 then
            if LockedPlayer then
                MonitorPlayerRespawn(LockedPlayer)
            else
                LockedPlayer = FindTarget()
                if LockedPlayer then
                    MonitorPlayerRespawn(LockedPlayer)
                end
            end
        end

        -- Khóa vào mục tiêu
        if LockedPlayer and LockedPlayer.Character and LockedPlayer.Character:FindFirstChild(TargetPartName) and LockedPlayer.Character.Humanoid.Health > 0 then
            local targetPart = LockedPlayer.Character:FindFirstChild(TargetPartName)
            local targetPos = PredictTargetPosition(targetPart)

            -- Camera khóa tức thời (siêu nhanh)
            local targetCFrame = CFrame.new(Camera.CFrame.Position, targetPos)
            lastCFrame = lastCFrame:Lerp(targetCFrame, SmoothingFactor)
            Camera.CFrame = lastCFrame

            -- Thêm highlight
            if not LockedPlayer.Character:FindFirstChild("Highlight") then
                CreateHighlight(LockedPlayer.Character)
            end
        else
            if Highlight then
                Highlight:Destroy()
                Highlight = nil
            end
        end
    else
        if Highlight then
            Highlight:Destroy()
            Highlight = nil
        end
    end
end)

-- Khóa mục tiêu khi click chuột
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.UserInputType == Enum.UserInputType.MouseButton1 and CamLockEnabled and not gameProcessed then
        LockedPlayer = FindTarget()
        if LockedPlayer then
            MonitorPlayerRespawn(LockedPlayer)
        end
    end
end)

-- Khởi tạo GUI
CreateGUI()

-- Thông báo khởi động
StarterGui:SetCore("SendNotification", {
    Title = "DNK CamLock",
    Text = "CamLock Loaded! Click to lock target.",
    Duration = 5
})
